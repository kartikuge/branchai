{
    "manifest_version": 3,
    "name": "StormAI v1 â€” Branch LLM Threads",
    "version": "0.1.0",
    "description": "Fork any ChatGPT message into a StormAI workspace with an in-browser model.",
    "permissions": [
      "storage",   
      "tabs",      
      "scripting"  
    ],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chat.openai.com/*", 
      "https://stormeai.vercel.app/*"       
    ],
    "background": {
      "service_worker": "bg/background.js" 
    },
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*" 
          ],
        "js": ["content/content.js"],
        "css": ["content/content.css"],
        "run_at": "document_idle" 
      }
    ],
    "action": {
      "default_title": "StormAI Branch"
    }
  }
  